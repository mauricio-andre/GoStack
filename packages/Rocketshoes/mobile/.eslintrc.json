{
  "env": {
    "es6": true
  },
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "__DEV__": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "prettier"
  ],
  "rules": {
    // Aponte todas as insconsistencias como erro
    "prettier/prettier": "error",
    // Aponte como aviso o uso de jsx em arquivos diferentes de jsx ou js
    "react/jsx-filename-extension": [
      "warn",
      { "extensions": [ ".jsx", ".js" ] }
    ],
    // Não obrigue export deafult em arquivos com uma unica exportação
    "import/prefer-default-export": "off",
    // Não aponte erro ao utilizar console.tron
    "no-console": ["error", { "allow": ["tron"] }]
  }
}
