{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "plugins": ["prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "class-methods-use-this": "off", // não obrigue o use de this
    "no-param-reassign": "off", // não bloqueie variaveis recebidas
    "no-unused-vars": ["error", { "argsIgnorePattern": "next" }]
    //"camelcase": "off" // não obrigue o formato camelCase
  }
}
